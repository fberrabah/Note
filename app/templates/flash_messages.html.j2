<!-- A special part of template to include where you want to display flash messages of any kind -->
<!-- Une partie spéciale du modèle pour inclure où vous souhaitez afficher les messages flash de toute nature -->
{% with messages = get_flashed_messages(with_categories=true) %}
  {% if messages %}
    {% for category, message in messages %}
      <div class="alert alert-{{category}}" role="alert">
        {{ message }}
      </div>
    {% endfor %}
  {% endif %}
{% endwith %}
